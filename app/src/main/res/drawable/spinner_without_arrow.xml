<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/EditTextFilledColor" />
                    <stroke android:width="1dp" android:color="@color/ActionBarColor" />
                    <corners android:radius="2.5dp" />
                </shape>
            </item>

            <item android:left="150dp"
                android:right="2dp">
                <bitmap
                    android:gravity="right" android:src="@drawable/small_ic_down" />
            </item>
        </layer-list>
    </item>

</selector>